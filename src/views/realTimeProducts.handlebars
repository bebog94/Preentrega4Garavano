<h1>Real Time Products Page</h1>
<ul id="productList">
  
</ul>

<form id="productForm">
    <label for="title">Title:</label>
    <input type="text" id="title" placeholder="Title" required><br><br>

    <label for="description">Description:</label>
    <textarea id="description" placeholder="Description" required></textarea><br><br>

    <label for="code">Code:</label>
    <input type="text" id="code" placeholder="Code" required><br><br>

    <label for="price">Price:</label>
    <input type="number" id="price" placeholder="Price" required><br><br>

    <label for="stock">Stock:</label>
    <input type="number" id="stock" placeholder="Stock" required><br><br>

    <label for="category">Category:</label>
    <input type="text" id="category" placeholder="Category" required><br><br>

    <label for="thumbnail">Thumbnail:</label>
    <input type="text" id="thumbnail" placeholder="Thumbnail URL" ><br><br>

    <button type="submit">Add Product</button>
</form>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>